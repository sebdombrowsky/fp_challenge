@page "/"
@using Models

  <ButtonRow @bind-NavigationModel="NavigationModel"></ButtonRow>

  @if (NavigationModel.IsDetailsView)
  {
    <Details @bind-NavigationModel="NavigationModel"></Details>
  }
  else
  {
    <Bottles></Bottles>
  }

@code
{
  public NavigationModel NavigationModel { get; set; } = new NavigationModel();
}
